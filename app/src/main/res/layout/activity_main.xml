<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_gradient">

        <ImageView
            android:id="@+id/rollingImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/clevertap_logo"
            android:layout_marginBottom="16dp"/>

        <!-- CardView 1 - User Profiles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/boy"/>

                <Button
                    android:id="@+id/userProfilesButton"
                    style="@style/CustomButtonStyle"
                    android:text="User Profiles"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 - Events -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/event"/>

                <Button
                    android:id="@+id/eventsButton"
                    style="@style/CustomButtonStyle"
                    android:text="Events"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 3 - Push -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/business"/>

                <Button
                    android:id="@+id/pushButton"
                    style="@style/CustomButtonStyle"
                    android:text="Push"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 4 - In App -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/in"/>

                <Button
                    android:id="@+id/inAppButton"
                    style="@style/CustomButtonStyle"
                    android:text="In App"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 5 - Native Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/native_display"/>

                <Button
                    android:id="@+id/nativeDisplayButton"
                    style="@style/CustomButtonStyle"
                    android:text="Native Display"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 6 - App Inbox -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/inbox_app"/>

                <Button
                    android:id="@+id/appInboxButton"
                    style="@style/CustomButtonStyle"
                    android:text="App Inbox"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 7 - Profiles or Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    android:src="@drawable/settings"/>

                <Button
                    android:id="@+id/settingsButton"
                    style="@style/CustomButtonStyle"
                    android:text="Settings"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
